<local:BasePanel x:Class="GesturesViewer.PicturePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local ="clr-namespace:GesturesViewer"
             mc:Ignorable="d" 
             Height="80" Width="80">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="5"/>
            <RowDefinition  Height="0.35*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Stretch="Fill" Source="{Binding Image}" Margin="3" />
        <TextBlock Grid.Row="2" Text="{Binding FileName}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11" Foreground="White" />

    </Grid>
</local:BasePanel>
